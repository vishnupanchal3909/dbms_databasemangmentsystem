<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SQL.Constriant.ConstriantSQL">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Constriant in SQL"
            android:gravity="center"
            android:textSize="20sp"
            android:padding="10dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/constriant_description"
            android:layout_width="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/background_other"
            android:text="1.Primary Key"
            android:textColor="@color/black"
            android:padding="10dp"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/foreign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2.Foreign Key"
            android:textColor="@color/black"
            android:layout_marginTop="6dp"
            android:background="@drawable/background_other"
            android:padding="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/unique"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3.UNIQUE"
            android:textColor="@color/black"
            android:background="@drawable/background_other"
            android:padding="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="6dp"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/defaultd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4.DEFAULT"
            android:background="@drawable/background_other"
            android:textColor="@color/black"
            android:padding="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textSize="20sp"
            android:layout_marginTop="6dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5.CHECK"
            android:background="@drawable/background_other"
            android:textColor="@color/black"
            android:padding="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="6dp"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/notnull"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5.NOT NULL"
            android:background="@drawable/background_other"
            android:textColor="@color/black"
            android:padding="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="6dp"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </LinearLayout>

</ScrollView>